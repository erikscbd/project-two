<section>
  <h1 class="title">
    Inventory Entry Form
  </h1>
  <h3 class="subtitle">
    Add inventory or create a new inventory item
  </h3>
</section>
<form class="form inventory-entry-form">
  <div class="form-group">
    <label for="mediaType">Media:</label>
    <input class="form-input" type="text" id="mediaType-inventory" />
  </div>
  <div class="form-group">
    <label for="genre">Genre:</label>
    <input class="form-input" type="password" id="genre-inventory" />
  </div>
  <div class="form-group">
    <label for="title">Cost:</label>
    <input class="form-input" type="text" id="title-inventory" />
  </div>
  <div class="form-group">
    <label for="costPrice">Cost:</label>
    <input class="form-input" type="text" id="costPrice-inventory" />
  </div>
  <div class="form-group">
    <label for="retailPrice">Retail:</label>
    <input class="form-input" type="text" id="retailPrice-inventory" />
  </div>

  <div>
    <button class="btn btn-primary" type="submit">Enter New Item</button>
  </div>
</form>
<div class="container">
  <div class="columns is-mobile">
    <div class="column">
      <div class="card">
        <div class="card-content">
          <div class="content">
            <div class="control">
              <label class="label">View Products</label>
              <label class="label">Select Product</label>
              <div class="select">
                <select id="select">
                  <option>All Products</option>
                  {{#each products}}
                    <option id="{{id}}">{{name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
            <br />

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<div class="container">
  <div class="columns is-mobile">
    <div class="column">
      <div class="card">
        <div class="card-content">
          <div id="productDiv" class="content">
            <label class="label">Product Info</label>
            <ul id="productList">
              {{#each products}}
                <li>
                  <label class="label">{{name}}</label>
                  <p>Quantity: {{quantity}}</p>
                  <p>Cost: {{cost}}</p>
                  <p>Description: {{description}}</p>
                  <p>Category: {{category}}</p>
                </li>
              {{/each}}
            </ul>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<script src="/js/inventory.js"></script>

<script src="/js/inventory.js"></script>